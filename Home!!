    if(isset($_POST["chkownNone"])){
        $ownNone = true;
        $totalChecked++;
    }else{
        $ownNone = false;
    }
    $dataRecord[] = $ownNone;
    
    if(isset($_POST["chkownOne"])){
        $ownOne = true;
        $totalChecked++;
    }else{
        $ownOne = false;
    }
    $dataRecord[] = $ownOne;
    
