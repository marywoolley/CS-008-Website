        $ownMultiple = true;
        $totalChecked++;
    }else{
        $ownMultiple = false;
    }
    $dataRecord[] = $ownMultiple;
    
    if(isset($_POST["chkfamOwns"])){
        $famOwns = true;
        $totalChecked++;
    }else{
        $famOwns = false;
    }
    $dataRecord[] = $famOwns;
    
    if(isset($_POST["chkcloseFriendOwns"])){
        $closeFriendOwns = true;
        $totalChecked++;
    }else{
        $closeFriendOwns = false;
    }
    $dataRecord[] = $closeFriendOwns;
    
    if(isset($_POST["chkgunTraining"])){
        $gunTraining = true;
        $totalChecked++;
    }else{
        $gunTraining = false;
    }
