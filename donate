    $myFirstName = htmlentities($_POST["myFirstName"], ENT_QUOTES, "UTF-8");
    $dataRecord[] = $myFirstName;
    
    $myLastName = htmlentities($_POST["myLastName"], ENT_QUOTES, "UTF-8");
    $dataRecord[] = $myLastName;
    
