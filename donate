/* initialize variables */

$myFirstName = "";

$myLastName = "";

$myStreet = "";

$myCity = "";

$myState = "-";

$myPostalCode = "";

$myEmail = "";

$myAmount = '0.00';

$myCardNum = "";

$myMonth = "-";
$myYear = "-";

$myCvvNum = "";

