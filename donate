    $subject = "Your Donation";
    
    $mailed = sendMail($to, $cc, $bcc, $from, $subject, $message);
        
    }else{
    
        if ($errorMsg) {
            print '<div id="errors">' . PHP_EOL;
            print '<h2>Your form has the following mistakes that need to be fixed.</h2>' . PHP_EOL;
            print '<ul>' . PHP_EOL;
            
