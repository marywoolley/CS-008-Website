$myEmail = "";

$myAmount = "";

$myCardNum = "";

$myMonth = "-";
$myYear = "-";

$myCvvNum = "";

$errorMsg = array();   

$dataRecord = array();    

$mailed = false; 

/* initialize error flags */

$firstNameERROR = false;

$lastNameERROR = false;

$streetERROR = false;

$cityERROR = false;

$stateERROR = false;

$postalCodeERROR = false;

$emailERROR = false;

$amountERROR = false;

$cardNumERROR = false;

$monthERROR = false;
$yearERROR = false;

$cvvERROR = false;

if(isset($_POST["btnSubmit"])){
    
    /* if (!securityCheck($thisURL)) {
        $msg = '<p>Sorry you cannot access this page. ';
        $msg.= 'Security breach detected and reported.</p>';
        die($msg);
    } */
    
    $myFirstName = htmlentities($_POST["myFirstName"], ENT_QUOTES, "UTF-8");
    $dataRecord[] = $myFirstName;
    
    $myLastName = htmlentities($_POST["myLastName"], ENT_QUOTES, "UTF-8");
    $dataRecord[] = $myLastName;
    
    $myStreet = htmlentities($_POST["myStreet"], ENT_QUOTES, "UTF-8");
