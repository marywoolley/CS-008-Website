    $domain = '//';
    
    $server = htmlentities($_SERVER['SERVER_NAME'], ENT_QUOTES, 'UTF-8');
    
    $domain .= $server;
    
        if ($debug) {
        
          print '<p>php Self: ' . $phpSelf;
